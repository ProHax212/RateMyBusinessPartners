<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="seniordesign.ratemybusinesspartners.CompanyProfile"
    tools:showIn="@layout/activity_company_profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/companyNameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/company_profile_company_name"
        android:textStyle="bold"
        android:textSize="@dimen/company_information_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/companyProfileReviewsTextView"
        android:layout_below="@+id/companyNameTextView"
        android:text="@string/company_profile_reviews"
        android:textStyle="bold"
        android:textSize="@dimen/company_information_text_size" />


    <ListView
        android:id="@+id/companyProfileReviewList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/company_profile_review_list_height"
        android:layout_below="@id/companyProfileReviewsTextView"
        android:clickable="false"
        android:contextClickable="false">



    </ListView>

    <View style="@style/divider"
        android:layout_height="@dimen/divider_height"
        android:layout_below="@id/companyProfileReviewList"
        android:id="@+id/companyProfileDividerOne"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_profile_view_reviews"
        android:id="@+id/allReviewsButton"
        android:layout_below="@+id/companyProfileDividerOne"
        android:onClick="viewAllReviews"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_profile_write_review"
        android:id="@+id/writeReviewButton"
        android:layout_alignBottom="@+id/allReviewsButton"
        android:layout_toRightOf="@+id/allReviewsButton"
        android:layout_toEndOf="@+id/allReviewsButton"
        android:onClick="writeReview"/>

</RelativeLayout>
