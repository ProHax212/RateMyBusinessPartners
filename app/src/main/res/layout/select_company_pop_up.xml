<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_company_viewgroup"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_company_textView"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_above="@+id/select_company_popup_autocompletetextview" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dropDownWidth="200dp"
        android:hint="Enter your company here: "
        android:id="@+id/select_company_popup_autocompletetextview"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_company_submit"
        android:id="@+id/select_company_button"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/select_company_popup_autocompletetextview"
        android:layout_centerHorizontal="true" />
</RelativeLayout>